    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/volume_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:progressDrawable="@drawable/seek_bar"
            android:thumb="@drawable/seek_thumb"/>

        <SeekBar
            android:id="@+id/pitch_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:progressDrawable="@drawable/seek_bar_pitch"
            android:thumb="@drawable/seek_thumb_pitch"/>

        <SeekBar
            android:id="@+id/length_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:progressDrawable="@drawable/seek_bar_length"
            android:thumb="@drawable/seek_thumb_length"/>


    </LinearLayout>



    <!--<Button
        android:id="@+id/stop"
        android:layout_width="72dp"
        android:layout_height="match_parent"
